<div class="card mb-3">
  <div class="card-body pb-4">
    <div class="d-flex flex-row bd-highlight align-items-center">
      <div class="bd-highlight"><%= image_tag "product-icon.png", size: 60 %></div>
      <div class="bd-highlight">
        <h3 class="title-font m-0">Catalog loader</h3>
        <h5 class="title-font secondary-font-color m-0" >Sync the products of your store with the fulfillment service catalog</h5>
      </div>
    </div>
    <hr/>
    <div class="container-xxl pt-4">
      <div id="catalog_loader_msg" class="mt-2 mb-2"></div>
      <%= form_with model: Catalog::Loader.new("", nil),
                    url: catalog_loader_path,
                    id: "new_catalog_loader" do |form| %>
        <div class="form-group">
          <%= label :catalog_loader, :product_ids, "Product IDs" %>
          <%= form.select :product_ids, @products,
                          { prompt: "Please select one or more products" },
                          { multiple: true, size: 5, class: "form-control" } %>
          <small id="productIds" class="form-text text-muted">
            This will trigger a filtered loader.
            If it's empty, all the catalog will be loaded by default
          </small>
        </div>
        <div class="d-flex flex-row justify-content-end bd-highlight pt-1">
          <%= form.submit "Load", data: { confirm: "Are you sure?" }, class: "btn btn-primary border border-dark m-1" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
